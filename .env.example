# XILFTEN Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=xilften
APP_VERSION=0.1.0
APP_PORT=7575
APP_HOST=0.0.0.0
DEBUG=True

# TMDB API Configuration
# Get your API key from: https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3
TMDB_IMAGE_BASE_URL=https://image.tmdb.org/t/p
TMDB_RATE_LIMIT=40  # requests per 10 seconds

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=qwen2.5:3b
OLLAMA_FALLBACK_MODEL=llama3.1
OLLAMA_TIMEOUT=60  # seconds

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./database/chroma_data
CHROMA_COLLECTION_MEDIA=media_embeddings
CHROMA_COLLECTION_MASHUPS=mashup_concepts

# DuckDB Configuration
DUCKDB_DATABASE_PATH=./database/xilften.duckdb

# CORS Settings
CORS_ORIGINS=http://localhost:7575,http://localhost:3000,http://127.0.0.1:7575
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/xilften.log

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Settings (optional, for future implementation)
ENABLE_CACHE=False
CACHE_TTL=3600  # seconds

# Feature Flags
ENABLE_AI_FEATURES=True
ENABLE_TMDB_SYNC=True
ENABLE_TELEMETRY=False
